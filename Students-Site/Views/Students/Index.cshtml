@model Students_Site.Models.Students.StudentIndexModel

@{
	ViewData["Title"] = "Студенты";
}

<h1>Студенты</h1>

<table class="table">
	<tr>
		<th>
			Имя
		</th>
		<th>
			Фамилия
		</th>
		<th></th>
	</tr>


	@foreach (var item in Model.StudentModels)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.FirstName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LastName)
			</td>
			<td>
				@Html.ActionLink("Подробнее", "ShowStudent", new { id=item.Id })
			</td>
			<td>
				@Html.ActionLink("Редактировать", "EditStudent", new { id = item.Id })
			</td>
		</tr>
	}
	
	

</table>

<div>
	@Html.ActionLink("Добавить студента", "MakeStudent")
</div>