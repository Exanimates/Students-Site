@model Students_Site.Models.StudentModel

@{
	ViewData["Title"] = "ShowStudent";
}

<h1>Студент</h1>

<div>
	<div>
		<label>Имя</label>
		<p>@Html.DisplayName(Model.FirstName)</p>
	</div>
	<div>
		<label>Фамилия</label>
		<p>@Html.DisplayName(Model.LastName)</p>
	</div>
</div>


<h1>Преподаватели студента</h1>
<table class="table">
	@foreach (var item in Model.Teachers)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.FirstName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LastName)
			</td>
		</tr>
	}
</table>