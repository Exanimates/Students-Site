@model Students_Site.Models.Student.StudentModel

@{
	ViewData["Title"] = "ShowStudent";
}
<div>
	@Html.ActionLink("Вернуться к списку студентов", "Index")
</div>

<h1>Студент</h1>

<div>
	<div>
		<label>Имя</label>
		<p>@Model.FirstName</p>
	</div>
	<div>
		<label>Фамилия</label>
		<p>@Model.LastName</p>
	</div>
	<div>
		<label>Средний бал</label>
		<p>@Model.AveradeScore</p>
	</div>
</div>


<h1>Преподаватели студента</h1>
<table class="table">
	<tr>
		<th>
			Имя
		</th>
		<th>
			Фамилия
		</th>
		<th>
			Предмет
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model.Teachers)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.FirstName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LastName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SubjectName)
			</td>
		</tr>
	}
</table>